<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/sender_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/sender_shape"
        android:gravity="start"
        android:maxWidth="190dp"
        android:minWidth="50dp"
        android:text="SALAMsdas  sad asd ad a asdas sads sada  sa asd ad asdsa"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/receiver_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toRightOf="@id/sender_text"
        app:layout_constraintTop_toBottomOf="@id/sender_text" />

</androidx.constraintlayout.widget.ConstraintLayout>